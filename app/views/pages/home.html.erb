<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_url('production-studio.png')%>);">
  <div class="banner-content">
    <h1>Gdutosma</h1>
    <p>Rent professionnal equipments from people near you</p>
      <%= simple_form_for :product, :method => 'get', url: :products do |f| %>

        <%= f.input_field :location, :placeholder => "Where",
        :class => "input-lg", :id => "inputcolor", required: true %>

        <%= f.input_field :product_wanted, :placeholder => "What",
        :class => "input-lg", :id => "inputcolor", required: true %>

        <%= f.input_field :start_date, :placeholder => "Start Date",
        :class => "input-lg datepicker", :id => "inputcolor", required: true %>

        <%= f.input_field :end_date, :placeholder => "End Date",
        :class => "input-lg datepicker", :id => "inputcolor", required: true %>

        <%= f.submit "Find !", :class => "btn btn-mine btn-lg" %>
      <% end %>
  </div>
</div>

