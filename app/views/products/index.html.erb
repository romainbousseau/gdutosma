<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_url('production-studio.png')%>);">
  <div class="banner-content">

  <h1>Gdutosma</h1>
  <p>Rent professionnal equipments from people near you</p>
  <%= simple_form_for :product do |f| %>

    <%= f.input_field :start_date, :placeholder => "Start Date",
    :class => "input-lg datepicker", :id => "inputcolor" %>

    <%= f.input_field :end_date, :placeholder => "End Date",
    :class => "input-lg datepicker", :id => "inputcolor" %>

    <%= f.submit "Find !", :class => "btn btn-primary btn-lg" %>
  <% end %>
  </div>
</div>

<div class="container">
   <div class="row">
    <% @products.each do |product| %>
       <div class="col-xs-12 col-sm-4">
         <div class="card">
           <div class="card-category"><%= product.category %></div>
           <div class="card-img">
             <% if product.photos? %>
             <%= cl_image_tag product.photos.first.path, width: 80, crop: :fill %>
             <% else %>
             <%= image_tag "http://placehold.it/50x50" %>
             <% end %>
            </div>
           <div class="card-description">
             <h2> <%= product.name %> </h2>
             <p> <%= truncate(product.description, length: 25, separator: ' ' ) %> </p>
             <p> <%= product.price %>$/day</p>
             <p> <%= product.user.first_name %> <%= product.user.last_name %></p>
             <%= link_to product_path(product) do %>
               <button type="button" class="btn btn-primary show_button ">Show</button>
             <% end %>
           </div>
         </div>
       </div>
       <% end %>
     </div>
 </div>

 <div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
