<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_url('production-studio.png')%>);">
  <div class="banner-content">
    <h1>Gdutosma</h1>
    <p>Rent professionnal equipments from people near you</p>
    <a class="btn btn-primary btn-lg">GET IT</a>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('background.jpg');">
          <div class="card-category"><%= product.category %></div>
          <div class="card-description">
            <h2> <%= product.name %> </h2>
            <p> <%= product.description %> </p>
            <p> <%= product.price %> </p>
            <%= link_to product_path(product) do %>
              <button type="button" class="btn btn-primary show_button ">Show</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>





